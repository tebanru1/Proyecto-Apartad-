<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768.0" prefWidth="1200.0" styleClass="root-panel" stylesheets="@InAdministratvios.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controlador.AdministrativosController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" styleClass="header-panel" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="header-title" text="Gestión Administrativa" textFill="#002147">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label styleClass="header-subtitle" text="Módulo de Control" textFill="#0072ce">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.3" focusTraversable="false" BorderPane.alignment="CENTER">
         <items>
            <VBox alignment="TOP_CENTER" maxWidth="400.0" minWidth="300.0" prefWidth="350.0" spacing="20.0" styleClass="card-panel">
               <children>
                  <Label styleClass="section-title" text="Detalles del Administrativo" />
                  
                  <ImageView fx:id="FotoPerfil" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="profile-image">
                     <image>
                        <Image url="@usuario.png" />
                     </image></ImageView>
                  
                  <GridPane hgap="10.0" styleClass="data-grid" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="30.0" prefWidth="30.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                     <children>
                        <Label styleClass="data-label" text="Cédula:" />
                        <Label fx:id="TFcedula" styleClass="data-value" text="Numero documento" GridPane.columnIndex="1" />
                        <Label styleClass="data-label" text="Nombre:" GridPane.rowIndex="1" />
                        <Label fx:id="TFnombre" styleClass="data-value" text="Nombre Administratvio" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label styleClass="data-label" text="Apellido:" GridPane.rowIndex="2" />
                        <Label fx:id="TFapellido" styleClass="data-value" text="Apellido Administrativo" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label styleClass="data-label" text="Cargo:" GridPane.rowIndex="3" />
                        <Label fx:id="TFcargo" styleClass="data-value" text="Cargo Administrativo" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label styleClass="data-label" text="Fecha:" GridPane.rowIndex="4" />
                        <Label fx:id="TFfecha" styleClass="data-value" text="AAAA-MM-DD" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label layoutX="21.0" layoutY="125.0" styleClass="data-label" text="Hora Entrada:" GridPane.rowIndex="5" />
                        <Label layoutX="21.0" layoutY="158.0" styleClass="data-label" text="Hora Salida:" GridPane.rowIndex="6" />
                        <Label fx:id="TFhoraE" layoutX="123.0" layoutY="125.0" styleClass="data-value" text="--:--:--" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <Label fx:id="TFhoraS" layoutX="123.0" layoutY="125.0" styleClass="data-value" text="--:--:" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <VBox.margin>
                        <Insets left="15.0" right="15.0" />
                     </VBox.margin>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" />
                     </rowConstraints>
                  </GridPane>
                  
                  <Region prefHeight="10.0" VBox.vgrow="SOMETIMES" />
                  
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label styleClass="section-subtitle" text="Registro Biométrico" />
                        <HBox alignment="CENTER" spacing="20.0">
                           <children>
                              <VBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label styleClass="data-label" text="Huella Ingreso" />
                                    <ImageView fx:id="huellaE" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" styleClass="fingerprint-image" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label styleClass="data-label" text="Huella Salida" />
                                    <ImageView fx:id="huellaS" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" styleClass="fingerprint-image" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="25.0" left="20.0" right="20.0" top="25.0" />
               </padding>
            </VBox>
            
            <VBox spacing="15.0" styleClass="content-panel">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <TextField promptText="Buscar por Cédula o Nombre..." styleClass="search-field" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnReporte" mnemonicParsing="false" styleClass="action-button, report-button" text="Generar Reporte">
                           <graphic>
                              <ImageView fitHeight="27.0" fitWidth="121.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@pdf.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  
                  <TableView fx:id="IngresosAdmin" focusTraversable="false" styleClass="data-table" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="cedula" prefWidth="75.0" styleClass="table-column-center" text="Cédula" />
                        <TableColumn fx:id="nombre" prefWidth="120.0" text="Nombre" />
                        <TableColumn fx:id="apellido" prefWidth="120.0" text="Apellido" />
                        <TableColumn fx:id="cargo" prefWidth="180.0" text="Cargo" />
                        <TableColumn fx:id="fecha" prefWidth="90.0" styleClass="table-column-center" text="Fecha" />
                        <TableColumn fx:id="horaE" prefWidth="90.0" styleClass="table-column-center" text="Hora Entrada" />
                        <TableColumn fx:id="horaS" prefWidth="90.0" styleClass="table-column-center" text="Hora Salida" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>

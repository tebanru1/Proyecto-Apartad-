<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controlador.PrincipalController">
   <children>
      <VBox fx:id="panel_lateral" alignment="CENTER" styleClass="panel_lateral" stylesheets="@styles.css">
         <children>
            <AnchorPane maxHeight="100.0" VBox.vgrow="ALWAYS" />
            <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
               <image>
                  <Image url="@Logo_Institucional.png" />
               </image>
            </ImageView>
            <AnchorPane maxHeight="100.0" VBox.vgrow="ALWAYS" />
            <Button fx:id="btnInicio" mnemonicParsing="false" prefHeight="50.0" prefWidth="330.0" styleClass="btn_Menu" stylesheets="@styles.css" text="INICIO" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnRegistrar" layoutX="10.0" layoutY="355.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="330.0" styleClass="btn_Menu" stylesheets="@styles.css" text="REGISTRAR USUARIO" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnIngroAdmin" layoutX="10.0" layoutY="255.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="330.0" styleClass="btn_Menu" stylesheets="@styles.css" text="INGRESOS ADMINISTRATIVOS" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnCodigo" mnemonicParsing="false" prefHeight="50.0" prefWidth="330.0" styleClass="btn_Menu" stylesheets="@styles.css" text="CREAR CARNET" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnAutorizaciones" mnemonicParsing="false" prefHeight="50.0" prefWidth="330.0" styleClass="btn_Menu" stylesheets="@styles.css" text="AUTORIZACIONES" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnVisitas" mnemonicParsing="false" prefHeight="50.0" prefWidth="330.0" styleClass="btn_Menu" stylesheets="@styles.css" text="VISITAS" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <AnchorPane VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <AnchorPane fx:id="root" styleClass="root" stylesheets="@styles.css" HBox.hgrow="ALWAYS" />
   </children>
</HBox>

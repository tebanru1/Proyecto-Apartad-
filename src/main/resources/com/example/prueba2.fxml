<AnchorPane fx:id="prueba" prefHeight="700.0" prefWidth="1000.0" stylesheets="@carnet.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controlador.carnetController">
   <children>
      <SplitPane dividerPositions="0.35" layoutX="10.0" layoutY="10.0" prefHeight="700.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" styleClass="form-panel">
               <children>
                  <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                     <children>
                        <Label styleClass="header-label" text="Datos del Funcionario / Visitante" />
                        <Separator prefWidth="200.0" />
                        
                        <GridPane hgap="10.0" vgap="15.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <TextField fx:id="txtNombre" promptText="Nombres" styleClass="input-field" />
                              <TextField fx:id="txtApellido" promptText="Apellidos" styleClass="input-field" GridPane.rowIndex="1" />
                              <TextField fx:id="txtDocumento" promptText="Número de Documento" styleClass="input-field" GridPane.rowIndex="2" />
                              <TextField fx:id="txtEntidad" promptText="Entidad / Dependencia" styleClass="input-field" GridPane.rowIndex="3" />
                              <TextField fx:id="txtCargo" promptText="Cargo (Opcional)" styleClass="input-field" GridPane.rowIndex="4" />
                              <HBox spacing="10.0" GridPane.rowIndex="5">
                                 <children>
                                    <ComboBox fx:id="cbRh" prefWidth="150.0" promptText="RH" styleClass="combo-box" />
                                    <DatePicker fx:id="dpVigencia" promptText="Vigencia" />
                                 </children>
                              </HBox>
                              <Button fx:id="btnCargarFoto" mnemonicParsing="false" onAction="#cargarFoto" prefHeight="35.0" prefWidth="1000.0" styleClass="btn-secondary" text="Cargar Fotografía" GridPane.rowIndex="6" />
                           </children>
                        </GridPane>
                        
                        <Separator prefWidth="200.0" />
                        <Label styleClass="sub-header" text="Acciones" />
                        <Button fx:id="btnGenerarCode" mnemonicParsing="false" onAction="#generarCodigo" prefWidth="1000.0" styleClass="btn-primary" text="Generar PDF417" />
                        <Button fx:id="btnExportar" mnemonicParsing="false" onAction="#exportarCarnet" prefWidth="1000.0" styleClass="btn-success" text="Exportar Carnet (PDF/PNG)" />
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
            
          <ScrollPane fitToWidth="true" styleClass="preview-scroll">
               <content>
                  <VBox alignment="CENTER" spacing="30.0" styleClass="preview-container">
                     <padding>
                        <Insets bottom="40.0" top="40.0" />
                     </padding>
                     <children>
                        <Label styleClass="preview-title" text="VISTA PREVIA - FRENTE" />
                        
                        <AnchorPane fx:id="cardFront" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="337.0" prefWidth="535.0" styleClass="card-body">
                           <children>
                              <StackPane styleClass="security-background" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                              
                              <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                                 <children>
                                    <StackPane prefHeight="50.0" prefWidth="50.0" styleClass="logo-placeholder">
                                       <children>
                                          <Label style="-fx-font-weight:bold;" text="INPEC" textFill="WHITE" />
                                       </children>
                                    </StackPane>
                                    <VBox>
                                       <children>
                                          <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="REPÚBLICA DE COLOMBIA" textFill="WHITE" />
                                          <Label style="-fx-font-size: 10px;" text="INSTITUTO NACIONAL PENITENCIARIO" textFill="WHITE" />
                                          <Label style="-fx-font-size: 10px;" text="Y CARCELARIO" textFill="WHITE" />
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <StackPane layoutX="25.0" layoutY="85.0" prefHeight="180.0" prefWidth="140.0" styleClass="photo-frame">
                                 <children>
                                    <ImageView fx:id="imgFotoView" fitHeight="178.0" fitWidth="138.0" pickOnBounds="true" preserveRatio="true" />
                                    <Label fx:id="lblNoPhoto" text="Sin Foto" textFill="#999999" />
                                 </children>
                              </StackPane>
                              
                              <GridPane layoutX="185.0" layoutY="90.0" vgap="5.0" AnchorPane.rightAnchor="20.0">
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="320.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                 <children>
                                    <VBox>
                                       <children>
                                          <Label styleClass="field-label" text="APELLIDOS" />
                                          <Label fx:id="lblApellidoVal" styleClass="field-value-large" text="APELLIDO" />
                                       </children>
                                    </VBox>
                                    <VBox GridPane.rowIndex="1">
                                       <children>
                                          <Label styleClass="field-label" text="NOMBRES" />
                                          <Label fx:id="lblNombreVal" styleClass="field-value-large" text="NOMBRE" />
                                       </children>
                                    </VBox>
                                    <VBox GridPane.rowIndex="2">
                                       <children>
                                          <Label styleClass="field-label" text="NÚMERO DE DOCUMENTO" />
                                          <Label fx:id="lblDocumentoVal" styleClass="field-value-highlight" text="00.000.000" />
                                       </children>
                                    </VBox>
                                    <HBox spacing="20.0" GridPane.rowIndex="3">
                                       <children>
                                          <VBox>
                                             <children>
                                                <Label styleClass="field-label" text="RH" />
                                                <Label fx:id="lblRhVal" styleClass="field-value" text="O+" />
                                             </children>
                                          </VBox>
                                          <VBox HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label styleClass="field-label" text="CARGO" />
                                                <Label fx:id="lblCargoVal" styleClass="field-value" text="VISITANTE" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                 </children>
                              </GridPane>
                              
                              <AnchorPane prefHeight="30.0" styleClass="card-footer" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                 <children>
                                    <Label layoutX="20.0" layoutY="6.0" text="VIGENCIA:" textFill="WHITE" AnchorPane.leftAnchor="20.0" />
                                    <Label fx:id="lblVigenciaVal" layoutX="85.0" layoutY="6.0" style="-fx-font-weight:bold;" text="01/01/2026" textFill="WHITE" />
                                    <Label fx:id="txtEntidad" layoutX="400.0" layoutY="6.0" text="ENTIDAD" textFill="WHITE" AnchorPane.rightAnchor="20.0" />
                                 </children>
                              </AnchorPane>
                           </children>
                        </AnchorPane>
                        
                        <Label styleClass="preview-title" text="VISTA PREVIA - POSTERIOR" />
                        
                        <AnchorPane fx:id="cardBack" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="337.0" prefWidth="535.0" styleClass="card-body-back">
                           <children>
                              <StackPane styleClass="security-background-light" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                              
                              <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                                 <children>
                                    <Label styleClass="legal-text" text="Este documento es personal e intransferible." />
                                    <Label styleClass="legal-text" text="El titular está obligado a devolverlo al finalizar sus funciones." />
                                    
                                    <Separator opacity="0.5" />
                                    
                                    
                                    <StackPane prefHeight="150.0" prefWidth="400.0" styleClass="barcode-area">
                                       <children>
                                          <ImageView fx:id="imgPdf417" fitHeight="80.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
                                          <Label fx:id="lblBarcodePlaceholder" text="[ ÁREA CÓDIGO PDF417 ]" textFill="#555555" />
                                       </children>
                                    </StackPane>
                                    
                                    <Label styleClass="legal-small" text="Control de Acceso Biométrico y Documental" />
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>

                     </children>
                  </VBox>
               </content>
            </ScrollPane>
        </items>
      </SplitPane>
   </children>
</AnchorPane>
